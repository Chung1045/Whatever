<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?android:attr/colorControlHighlight"> <!-- This defines the color of the ripple effect -->

    <!-- The ripple effect will be applied to this shape -->
    <item android:id="@android:id/background">
        <shape android:shape="oval">
            <solid android:color="@color/black"/> <!-- This is the background color of the circle -->
            <size
                android:width="50dp"
                android:height="50dp"/> <!-- Adjust the size as needed -->
        </shape>
    </item>
</ripple>
